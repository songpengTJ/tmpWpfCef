<Window x:Class="WpfCef.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCef"
        mc:Ignorable="d"
        xmlns:cefSharpWPF="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="100"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBox x:Name="TBURL"></TextBox>
            <Button x:Name="BTNGO" Click="BTNGO_Click" Content="GO"></Button>
        </StackPanel>
        
        <cefSharpWPF:ChromiumWebBrowser Grid.Row="1" x:Name="MyBrowser" Address="http://www.blwl.net">
        </cefSharpWPF:ChromiumWebBrowser>

    </Grid>
</Window>
